<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".captureAndTag">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="217dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/label_list"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="59dp"
            android:layout_height="55dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/floatingActionButton4"
            app:backgroundTint="@color/design_default_color_primary"
            tools:context=".captureAndTag"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/checkbox_on_background"
            android:id="@+id/floatingActionButton"
            app:backgroundTint="@color/design_default_color_primary"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout" android:layout_marginRight="24dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".captureAndTag" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="0dp"
            android:id="@+id/relativeLayout">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="275dp"
                android:layout_height="375dp"
                android:layout_marginTop="1dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="229dp"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="69dp" android:layout_marginEnd="69dp" android:layout_alignParentStart="true"
                android:layout_marginLeft="67dp" android:layout_marginStart="67dp"
                android:layout_alignParentLeft="true">

            <ImageView
                    android:id="@+id/image_view"
                    android:background="@mipmap/ic_launcher_round"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="234dp"
                    android:layout_height="300dp"/>
            <Button
                    android:id="@+id/btn_capture"
                    android:text="Capture"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>