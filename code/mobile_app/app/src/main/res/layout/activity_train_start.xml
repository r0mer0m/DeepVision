<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".train_start">

    <TextView
            android:text="We are starting to train your model.\n\nYou will receibe a message when your model is ready."
            android:layout_width="285dp"
            android:layout_height="113dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintVertical_bias="0.257"
            android:gravity="center_horizontal"/>
    <TextView
            android:text="Done!"
            android:layout_width="102dp"
            android:layout_height="44dp"
            android:id="@+id/textView4" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textStyle="bold|italic" android:textSize="24sp"
            android:textColor="@android:color/holo_orange_light" android:textAllCaps="false"
            android:gravity="center_horizontal"/>
</android.support.constraint.ConstraintLayout>